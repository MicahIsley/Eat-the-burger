<h1>Eat Da Burger</h1>

<h2>Uneaten Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless this.eaten}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="eaten" value="true">
          <button type="submit">Devour</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Already Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if this.eaten}}
      <li>
        {{this.name}}

      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/api/new" method="POST">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Eaten<br>
    <input type="radio" name="sleepy" value="0"> Uneaten
  </div>

  <button type="submit">Add Burger</button>
</form>